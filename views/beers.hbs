<div class="container pt-sm-5">
  <div class="row">
    {{#each beers}}
      <div class="col-md-3" >
        <img
          src="{{this.image_url}}"
          class="card-img-top" style="width: 5rem;"
          alt="{{this.name}}"
        />
        <div class="card-body" "card h-100">
          <h5 class="card-title">{{this.name}}</h5>
          <h6>{{this.tagline}}</h6>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div> 